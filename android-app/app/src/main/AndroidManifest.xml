<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jpmorganchase.apiary" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="LoginActivity"
            android:label="LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HiveActivity"
            android:label="@string/title_activity_hive"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="jpmorganchase.hive" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".InspectionActivity" >
        </activity>
        <activity android:name=".ApiaryActivity" >
        </activity>
        <activity android:name=".HarvestActivity" >
        </activity>
        <activity android:name="MainActivity" >
        </activity>
        <activity
            android:name=".ApiaryChoice"
            android:label="@string/title_activity_apiary_choice"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
